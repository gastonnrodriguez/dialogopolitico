---
import Xlogo from '../../assets/images/logox.svg';
import Newsletter from '../../assets/images/newsletter-icon.webp'
import AppstoreLogo from '../../assets/images/app-store.png'
import PlaystoreLogo from '../../assets/images/google-play.png'
import '../../assets/styles/custom.css'
---

<div class="px-2 py-4">
  <div class="flex -mx-2">
    <div class="w-1/3 px-2">
      <div class=" h-12 text-center ">
        <div class="flex mx-auto items-center justify-center">
          <div class="mr-4">
            <img src={Xlogo.src} class="logo-social"/>
          </div>
          <div>
            <p>Síguenos en X</p>
          </div>
        </div>
       </div>
    </div>
    <div class="w-1/3 px-2">
      <div class=" h-12 text-center ">
        <div class="flex mx-auto items-center justify-center">
          <div class="mr-4">
            <img src={Newsletter.src} class="logo-social"/>
          </div>
          <div>
            <p>Únete a nuestra newsletter</p>
          </div>
        </div>
       </div>
    </div>
    <div class="w-1/3 px-2">
      <div class=" h-12 text-center ">
        <div class="flex mx-auto items-center justify-center">
          <div class="text-center">
            <p class="">Descarga nuestra APP</p>
          </div>
          <div class="mr-4">
            <img src={AppstoreLogo.src} class=""/>
          </div>
          <div class="mr-4">
            <img src={PlaystoreLogo.src} class=""/>
          </div>
          
        </div>
       </div>
    </div>
  </div>
</div>